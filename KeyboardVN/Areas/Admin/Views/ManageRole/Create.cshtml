@model KeyboardVN.Models.Role

@section Style {
}

<div class="page">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="page-title">Manage Role</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="ManageRole" asp-action="Index">Manage Role</a></li>
            <li class="breadcrumb-item active">Add New Role</li>
            </ol>
    </div>
    <!-- End Page Header -->
    <!-- Page Content -->
    <div class="page-content">

        <!-- Panel -->
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">Role's information</h3>
            </div>
            <div class="panel-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <!-- End Panel -->
    </div>
    <!-- End Page Content -->
</div>

