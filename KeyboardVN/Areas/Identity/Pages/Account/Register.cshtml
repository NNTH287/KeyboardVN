@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="wrapper">
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" class="login" method="POST">
        <p class="title">Register</p>
        <!--Notìication-->
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @* <c:if test="${notification != null}">
        <div class="alert <c:choose><c:when test=" ${notiType= ='RED' }">
        alert-danger</c:when><c:otherwise>alert-success</c:otherwise></c:choose>">
        <strong>${notification}</strong>
        <%session.removeAttribute("notification");%>
        <%session.removeAttribute("notiType");%>
        </div>
        </c:if> *@
        <div>
            
            <div class=" form-group">
                <input asp-for="Input.Email" class="form-control" type="text" autocomplete="username" aria-required="true" placeholder="Email">
                <i class="fa fa-user"></i>
                <div class="text-danger">
                    <span asp-validation-for="Input.Email" ></span>
                </div>                
            </div>
            <div class=" form-group">
                <input asp-for="Input.Password" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="Password">
                <i class="fa fa-key"></i>
                <div class="text-danger">
                    <span asp-validation-for="Input.Password" ></span>
                </div>
            </div>
        </div>
        <div class=" form-group">
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
            <i class="fa fa-key"></i>
            <div class="text-danger">
                <span asp-validation-for="Input.ConfirmPassword" ></span>
            </div>
        </div>

        <a href="login">Login</a>
        <div class="row text-center">
            <input id="registerSubmit" class="registerSubmit" type="submit" value="Register">
        </div>
    </form>
    </p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

