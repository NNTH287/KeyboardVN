@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-12">
        <div class="bg-light p-30 mb-5" style="padding-bottom: 15px;">
            <form class="row" id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="col-md-6 form-group">
                    <label asp-for="Input.FirstName" class="form-label"></label>
                    <input asp-for="Input.FirstName" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-group">
                    <label asp-for="Input.LastName" class="form-label"></label>
                    <input asp-for="Input.LastName" class="form-control" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-group">
                    <label asp-for="Input.Street" class="form-label"></label>
                    <input asp-for="Input.Street" class="form-control" />
                    <span asp-validation-for="Input.Street" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-group">
                    <label asp-for="Input.City" class="form-label"></label>
                    <input asp-for="Input.City" class="form-control" />
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-group">
                    <label asp-for="Input.Province" class="form-label"></label>
                    <input asp-for="Input.Province" class="form-control" />
                    <span asp-validation-for="Input.Province" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-group">
                    <label asp-for="Input.Country" class="form-label"></label>
                    <input asp-for="Input.Country" class="form-control" />
                    <span asp-validation-for="Input.Country" class="text-danger"></span>
                </div>

                <div class="col-md-12 form-group">
                    <label asp-for="UserName" class="form-label"></label>
                    <input asp-for="Input.UserName" class="form-control" readonly />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>

                <div class="col-md-12 form-group">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="col-md-12 form-group">
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-5">
                        </div>
                        <div class="col-md-2">
                            <button id="update-profile-button" type="submit" class="w-100 btn btn-primary">Save</button>
                        </div>
                        <div class="col-md-5">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
